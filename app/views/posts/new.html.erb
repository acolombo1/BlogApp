<div class="newpost">
  <h1>New Post</h1>
  <% flash.each do |type, msg| %>
    <div>
    <%= msg if type="error" %>
    </div>
  <% end %>
  <%= form_with model: post, url: post_path, method: :post, local: true, scope: :post do |f| %>
    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title, :size => 60 %>
    </div>

    <div>
      <%= f.label :text %><br>
      <%= f.text_area :text, :cols => 60, :rows => 10 %>
    </div>

    <%= f.submit "Add Post" , class: "submit" %>
  <% end %>
</div>